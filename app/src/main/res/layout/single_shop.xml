<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="366dp"
        android:layout_height="171dp"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/shopname"
        android:layout_width="230dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="319dp"
        android:text="@string/textview"
        android:textColor="#FF5722"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_image" />

    <TextView
        android:id="@+id/shoptype"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="319dp"
        android:text="@string/textview"
        android:textColor="#090909"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopname" />

    <TextView
        android:id="@+id/shop_location"
        android:layout_width="135dp"
        android:layout_height="17dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="200dp"
        android:text="@string/textview"
        android:textColor="#070707"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/shoptype"
        app:layout_constraintTop_toBottomOf="@+id/shopname" />

    <TextView
        android:id="@+id/shop_opentime"
        android:layout_width="83dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="319dp"
        android:text="@string/textview"
        android:textColor="#050505"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoptype" />

    <ImageView
        android:id="@+id/dialler"
        android:layout_width="39dp"
        android:layout_height="52dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toStartOf="@+id/favourites"
        app:layout_constraintStart_toEndOf="@+id/shop_opentime"
        app:layout_constraintTop_toBottomOf="@+id/shop_image"
        app:srcCompat="@drawable/phonecall" />

    <ImageView
        android:id="@+id/favourites"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialler"
        app:layout_constraintTop_toBottomOf="@+id/shop_image"
        app:srcCompat="@drawable/love"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/shop_closetime"
        android:layout_width="85dp"
        android:layout_height="16dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="72dp"
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/dialler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/shop_opentime"
        app:layout_constraintTop_toBottomOf="@+id/shop_location" />
</androidx.constraintlayout.widget.ConstraintLayout>